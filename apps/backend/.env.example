# StellarRent Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Port for the backend server (default: 3000)
PORT=3000

# Environment (development, production, test)
NODE_ENV=development

# CORS origin for frontend requests (comma-separated for multiple origins)
# For development: http://localhost:3001
# For production: https://your-domain.com
CORS_ORIGIN=http://localhost:3001

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase project URL
# Get this from: Supabase Dashboard > Settings > API > Project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase API key (anonymous key)
# Get this from: Supabase Dashboard > Settings > API > Project API keys > anon public
SUPABASE_KEY=your_supabase_api_key_here

# Supabase anonymous key (public key)
# Get this from: Supabase Dashboard > Settings > API > Project API keys > anon public
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (private key - keep secure!)
# Get this from: Supabase Dashboard > Settings > API > Project API keys > service_role
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# AUTHENTICATION
# =============================================================================

# JWT secret for token signing (generate a strong random string)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random

# JWT token expiration time (e.g., 1h, 24h, 7d)
JWT_EXPIRES_IN=24h

# =============================================================================
# STELLAR BLOCKCHAIN CONFIGURATION
# =============================================================================

# Stellar network (testnet, mainnet)
# Use 'testnet' for development, 'mainnet' for production
STELLAR_NETWORK=testnet

# Stellar Horizon server URL
# Testnet: https://horizon-testnet.stellar.org
# Mainnet: https://horizon.stellar.org
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Trustless Work API endpoint for escrow integration
TRUSTLESS_WORK_API=https://api.trustlesswork.com

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

# Redis URL for caching and session management
# For Docker: redis://redis:6379
# For local Redis: redis://localhost:6379
REDIS_URL=redis://redis:6379

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# Rate limit window in minutes
RATE_LIMIT_WINDOW_MS=15

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# SECURITY
# =============================================================================

# Enable HTTPS redirect (true/false)
FORCE_HTTPS=false

# Session secret for cookie signing
SESSION_SECRET=your_session_secret_here

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Enable debug mode (true/false)
DEBUG=true

# Enable API documentation (true/false)
ENABLE_API_DOCS=true